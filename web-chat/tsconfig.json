{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
  },
  "include": [
    "src/**/**/*.ts",
    "src/**/**/*.d.ts",
    "database/migrations/*.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "jest.config.js",
    ".eslintrc.js"
  ]
}
